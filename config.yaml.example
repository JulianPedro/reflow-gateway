server:
  port: 3000
  host: 0.0.0.0

database:
  host: postgres        # docker-compose service name; use localhost for local dev
  port: 5432
  user: reflow
  password: ${DB_PASSWORD}
  database: reflow_gateway
  sslmode: disable

jwt:
  secret: ${JWT_SECRET}

cors:
  allowed_origins:
    - "http://localhost:3001"
    - "http://localhost:3000"
  allowed_headers:
    - "*"
  expose_headers:
    - "Mcp-Session-Id"
    - "MCP-Protocol-Version"

session:
  timeout: 30m
  cleanup_interval: 5m

encryption:
  key: ${ENCRYPTION_KEY}   # must be exactly 32 characters

logging:
  level: info              # debug | info | warn | error
  format: json             # json | console

stdio:
  idle_ttl: 30m
  max_lifetime: 24h
  gc_interval: 1m
  max_processes: 100

kubernetes:
  enabled: false
  namespace: reflow
  kubeconfig: ""           # empty = in-cluster config
  idle_ttl: 30m
  max_lifetime: 24h
  gc_interval: 1m
  max_instances: 100

telemetry:
  enabled: false
  endpoint: ""             # e.g. "otel-collector:4317"
  service_name: "reflow-gateway"
  insecure: true
