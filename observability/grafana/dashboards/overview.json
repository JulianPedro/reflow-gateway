  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Total Requests / min",
      "type": "stat",
      "targets": [
        { "expr": "sum(rate(mcp_requests_total[1m]))*60", "legendFormat": "req/min" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "unit": "ms", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 500 }, { "color": "red", "value": 2000 }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Avg Latency (p50)",
      "type": "stat",
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(mcp_request_duration_bucket[5m])) by (le))", "legendFormat": "p50" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "unit": "percentunit", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.01 }, { "color": "red", "value": 0.05 }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 3,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Error Rate",
      "type": "stat",
      "targets": [
        { "expr": "sum(rate(mcp_requests_total{status=\"error\"}[5m])) / sum(rate(mcp_requests_total[5m]))", "legendFormat": "error rate" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "blue", "value": null }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "id": 4,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Active Sessions",
      "type": "stat",
      "targets": [
        { "expr": "mcp_sessions_active", "legendFormat": "sessions" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "custom": { "fillOpacity": 10, "stacking": { "mode": "normal" } } } },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "id": 5,
      "title": "Requests Over Time",
      "type": "timeseries",
      "targets": [
        { "expr": "sum by (method) (rate(mcp_requests_total[1m]))*60", "legendFormat": "{{method}}" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "id": 6,
      "title": "Latency Percentiles",
      "type": "timeseries",
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(mcp_request_duration_bucket[5m])) by (le))", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.95, sum(rate(mcp_request_duration_bucket[5m])) by (le))", "legendFormat": "p95" },
        { "expr": "histogram_quantile(0.99, sum(rate(mcp_request_duration_bucket[5m])) by (le))", "legendFormat": "p99" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "id": 7,
      "title": "Top Tools by Call Count",
      "type": "bargauge",
      "targets": [
        { "expr": "topk(10, sum by (tool_name) (increase(mcp_tool_calls_total[1h])))", "legendFormat": "{{tool_name}}" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "id": 8,
      "title": "Upstream Latency by Method",
      "type": "timeseries",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(mcp_upstream_request_duration_bucket[5m])) by (le, method))", "legendFormat": "{{method}} p95" }
      ]
    }
